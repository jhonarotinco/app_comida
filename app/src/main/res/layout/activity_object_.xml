<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".Object_Activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView

            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cuéntanos sobre tu objetivo"
            android:textColor="#24A68C"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="20dp" />
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yo deseo:"
            android:textColor="#24A68C"
            android:textStyle="normal"
            android:textAlignment="center"
            android:textSize="20dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rbtn_ganar_peso"
                android:textColor="#24A68C"
                android:textStyle="normal"
                android:layout_width="wrap_content"
                android:layout_marginStart="50dp"
                android:textSize="18dp"
                android:layout_height="wrap_content"
                android:text="Ganar Peso"
                ></RadioButton>
            <RadioButton
                android:id="@+id/rbt_perder_peso"
                android:textColor="#24A68C"
                android:textStyle="normal"
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_height="wrap_content"
                android:text="Perder Peso"
                ></RadioButton>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            xmlns:numberpicker="http://schemas.android.com/apk/res-auto"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvx_cantidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cantidad de Kilos"
                android:textColor="#24A68C"
                android:textStyle="normal"
                android:textSize="20dp" />
            <com.travijuu.numberpicker.library.NumberPicker
                android:id="@+id/txt_cant_kilo"
                android:layout_width="130dp"
                android:layout_height="40dp"
                numberpicker:min="0"
                numberpicker:max="10"
                numberpicker:value="-5"
                numberpicker:unit="1"
                numberpicker:focusable="false"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="¿En cuántas semanas?"
                android:textColor="#24A68C"
                android:textStyle="normal"
                android:textAlignment="center"
                android:textSize="20dp" />

            <TextView
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="¿Eres alérgico a algún alimento?"
                android:textColor="#24A68C"
                android:textStyle="normal"
                android:textAlignment="center"
                android:textSize="20dp" />

            <EditText
                android:layout_marginTop="10dp"
                android:id="@+id/txt_alergia"
                android:layout_width="match_parent"
                android:layout_height="118dp"
                android:textAlignment="center"
                android:background="@android:drawable/editbox_background_normal"
                android:ems="10"
                android:hint="Ingresar aqui los alimento a los que tiene alérgia"
                android:inputType="textMultiLine"
                android:autoSizeStepGranularity="2sp"/>
            <Button
                android:id="@+id/btn_siguiente_object"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginLeft="05dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="05dp"
                android:onClick="onPlanesClick"
                android:backgroundTint="#FF9A9A"
                android:text="SIGUIENTE"
                android:textColor="#ffff"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>