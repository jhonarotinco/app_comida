<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".ConsultasFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imagen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_baseline_supervisor_account_24"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Realizar Consultas"
            android:textColor="#24A68C"
            android:layout_toEndOf="@+id/imagen"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="20dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="90dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvx_cantidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingresar Consulta"
            android:textAlignment="center"
            android:textColor="#24A68C"
            android:textStyle="normal"
            android:textSize="20dp" />
        <EditText
            android:id="@+id/txt_alergia"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:autoSizeStepGranularity="2sp"
            android:background="@android:drawable/editbox_background_normal"
            android:ems="10"
            android:hint="Ingresar Texto"
            android:inputType="textMultiLine"
            android:textAlignment="center" />
        <Button
            android:id="@+id/btn_grabar_c"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginLeft="05dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="05dp"
            android:backgroundTint="#FF9A9A"
            android:text="Grabar Consulta"
            android:textColor="#ffff"
            android:textSize="20dp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/btn_grabar_r"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginLeft="05dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="05dp"
            android:backgroundTint="#FF9A9A"
            android:text="Responder Consulta"
            android:textColor="#ffff"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>