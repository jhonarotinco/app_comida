<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="320dp"
        android:textAlignment="center"
        android:textColor="#24A68C"
        android:layout_height="wrap_content"
        android:text="Consulta"
        android:textStyle="bold"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/txt_consulta_v"
        android:layout_width="320dp"
        android:layout_height="150dp"
        android:layout_marginTop="25dp"
        android:autoSizeStepGranularity="2sp"
        android:background="@android:drawable/editbox_background_normal"
        android:ems="10"
        android:hint="Consulta"
        android:inputType="textMultiLine"
        android:textAlignment="center" />
    <TextView
        android:layout_width="320dp"
        android:textAlignment="center"
        android:textColor="#24A68C"
        android:layout_height="wrap_content"
        android:text="Respuesta"
        android:layout_below="@+id/txt_consulta_v"
        android:textStyle="bold"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/txt_respuesta_v"
        android:layout_height="150dp"
        android:layout_width="320dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/txt_consulta_v"
        android:autoSizeStepGranularity="2sp"
        android:background="@android:drawable/editbox_background_normal"
        android:ems="10"
        android:hint="Sin respuesta"
        android:inputType="textMultiLine"
        android:textAlignment="center" />

    <ImageView
        android:id="@+id/imgresponder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="70dp"
        android:layout_toEndOf="@+id/txt_consulta_v"
        android:src="@drawable/ic_baseline_question_answer_24" />
</RelativeLayout>