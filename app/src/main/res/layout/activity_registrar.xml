<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#FFFF"
    android:focusableInTouchMode="true"
    tools:context=".RegistrarActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="34dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="vertical"
            android:padding="20dp">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                app:srcCompat="@drawable/logo_cab" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="Llene los datos para acceder a su plan alimenticio"
                    android:textColor="@color/primary_color"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textSize="20dp" />
                <TextView
                    android:id="@+id/id_datos_iniio"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_height="wrap_content"
                    android:text="Datos de inicio de sesión"
                    android:textColor="@color/primary_color"
                    android:layout_gravity="center"
                    android:textSize="18dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txv_correo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Correo"
                        android:layout_gravity="center"
                        android:textColor="@color/primary_color"
                        android:textSize="18dp" />
                    <EditText
                        android:id="@+id/txv_usuario"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@android:drawable/editbox_background_normal"
                        android:drawablePadding="10dp"
                        android:ems="10"
                        android:hint="Ingrese su correo"
                        android:inputType="textEmailAddress"
                        android:textAlignment="center" />
                    <TextView
                        android:id="@+id/txv_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="Password"
                        android:layout_gravity="center"
                        android:textColor="@color/primary_color"
                        android:textSize="18dp" />
                    <EditText
                        android:id="@+id/txt_password"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="10"
                        android:background="@android:drawable/editbox_background_normal"
                        android:drawablePadding="18dp"
                        android:ems="10"
                        android:hint="Ingrese su password"
                        android:textAlignment="center" />
                    <TextView
                        android:id="@+id/txv_cuenta_sobre_ti"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cuentános sobre tí"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/primary_color"
                        android:layout_gravity="center"
                        android:textSize="20dp" />
                    <TextView
                        android:id="@+id/txv_nombres"
                        android:layout_marginTop="25dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nombres"
                        android:layout_gravity="center"
                        android:textColor="@color/primary_color"
                        android:textSize="18dp" />
                    <EditText
                        android:id="@+id/txt_nombre"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="10"
                        android:background="@android:drawable/editbox_background_normal"
                        android:drawablePadding="10dp"
                        android:ems="10"
                        android:hint="Ingrese sus nombres"
                        android:textAlignment="center" />
                    <TextView
                        android:id="@+id/txv_apellido"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Apellidos"
                        android:layout_gravity="center"
                        android:textColor="@color/primary_color"
                        android:layout_marginTop="25dp"
                        android:textSize="18dp" />
                    <EditText
                        android:id="@+id/txt_apellido"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="10"
                        android:background="@android:drawable/editbox_background_normal"
                        android:drawablePadding="10dp"
                        android:ems="10"
                        android:hint="Ingrese sus apellidos"
                        android:textAlignment="center" />
                        <TextView
                            android:id="@+id/txv_fecha_nac"
                            android:layout_marginTop="25dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Fecha de Nacimiento"
                            android:textColor="@color/primary_color"
                            android:textSize="18dp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">
                        <EditText
                            android:id="@+id/txt_fecha"
                            android:layout_width="100dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="date" />
                        <Button
                            android:id="@+id/btn_fecha"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:text="Seleccionar Fecha"></Button>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txv_genero"
                        android:layout_marginTop="25dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Elige tu género"
                        android:textColor="@color/primary_color"
                        android:textSize="18dp" />
                    <Spinner
                        android:id="@+id/spinner"
                        android:background="@android:drawable/editbox_background_normal"
                        android:layout_width="match_parent"
                        android:layout_marginRight="15dp"
                        android:textAlignment="center"
                        android:layout_marginLeft="15dp"
                        android:entries="@array/genero"
                        android:layout_height="50dp" />
                    <TextView
                        android:id="@+id/txv_talla"
                        android:layout_marginTop="25dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Talla en (cm)"
                        android:textColor="@color/primary_color"
                        android:textSize="18dp" />
                    <EditText
                        android:id="@+id/txt_talla"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="10"
                        android:background="@android:drawable/editbox_background_normal"
                        android:drawablePadding="10dp"
                        android:ems="10"
                        android:hint="Talla en metros (Ejm 1.69)"
                        android:textAlignment="center" />
                    <TextView
                        android:id="@+id/txv_peso"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="25dp"
                        android:layout_height="wrap_content"
                        android:text="Peso en (Kg)"
                        android:layout_gravity="center"
                        android:textColor="@color/primary_color"
                        android:textSize="18dp" />
                    <EditText
                        android:id="@+id/txt_peso"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="10"
                        android:background="@android:drawable/editbox_background_normal"
                        android:drawablePadding="10dp"
                        android:ems="10"
                        android:hint="Peso en (Kg)"
                        android:textAlignment="center" />
                    <Button
                        android:id="@+id/btn_siguiente"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="05dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="25dp"
                        android:layout_marginRight="05dp"
                        android:backgroundTint="#FF9A9A"
                        android:text="SIGUIENTE"
                        android:textSize="20dp"
                        android:textColor="#ffff"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>